<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="КнопкиГлавногоМеню" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/buttonMain</item>
        <item name="android:layout_margin">@dimen/layoutMarginMenu"</item>

        <item name="android:textColor">@color/buttonMainText</item>
        <item name="android:textSize">@dimen/textSizeMenu</item>
        <item name="cornerRadius">@dimen/cornerRadiusMenuButton</item>
        <item name="iconTint">@color/buttonMainText</item>
        <item name="iconSize">@dimen/iconSize</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="КнопкaПустогоЭкрана">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:backgroundTint">@color/settingBackground</item>

        <item name="android:textColor">@color/buttonMainText</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>

        <item name="iconTint">@color/buttonMainText</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="КнопкиМенюНастроек">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/settingBackground</item>

        <item name="android:textColor">@color/buttonMainText</item>
        <item name="android:textSize">@dimen/textSetting</item>
        <item name="android:gravity">center_vertical</item>

        <item name="icon">@drawable/baseline_toggle_on_24</item>
        <item name="iconTint">@color/buttonMainText</item>
        <item name="iconGravity">end</item>
    </style>
    <style name="КнопкиМенюНастроекГланая">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/settingBackground</item>

        <item name="android:textColor">@color/buttonMainText</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>

        <item name="icon">@drawable/baseline_toggle_on_24</item>
        <item name="iconTint">@color/buttonMainText</item>
        <item name="iconGravity">end</item>
    </style>
</resources>